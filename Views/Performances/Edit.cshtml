@model EM.Models.Performance

@{
    ViewData["Title"] = "Edit Performance Review";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-pencil me-2"></i>Edit Performance Review</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-warning text-dark">
        <h5 class="card-title mb-0"><i class="bi bi-clipboard-check me-2"></i>Edit Performance Review</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EmployeeId" class="form-label fw-bold">Employee *</label>
                        <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId">
                            <option value="">Select Employee</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ReviewDate" class="form-label fw-bold">Review Date *</label>
                        <input asp-for="ReviewDate" class="form-control" type="date" />
                        <span asp-validation-for="ReviewDate" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Score" class="form-label fw-bold">Performance Score *</label>
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <input asp-for="Score" class="form-control" type="number" step="0.1" min="1" max="5" />
                        <span asp-validation-for="Score" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="rating-display mt-2">
                            @{
                                var rating = Model.Score switch
                                {
                                    >= 4.5m => "Excellent",
                                    >= 4.0m => "Very Good",
                                    >= 3.5m => "Good",
                                    >= 3.0m => "Satisfactory",
                                    >= 2.0m => "Needs Improvement",
                                    _ => "Poor"
                                };
                                var ratingClass = Model.Score switch
                                {
                                    >= 4.0m => "text-success",
                                    >= 3.0m => "text-warning",
                                    _ => "text-danger"
                                };
                                var progressClass = Model.Score switch
                                {
                                    >= 4.0m => "bg-success",
                                    >= 3.0m => "bg-warning",
                                    _ => "bg-danger"
                                };
                                var percentage = ((Model.Score - 1) / 4) * 100;
                            }
                            <span class="fw-bold @ratingClass">@rating</span>
                            <div class="progress mt-1">
                                <div class="progress-bar @progressClass" role="progressbar" style="width: @percentage%"></div>
                            </div>
                            <small class="text-muted">Current Rating: @Model.Score.ToString("0.0")/5.0</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comments" class="form-label fw-bold">Comments & Feedback</label>
                <textarea asp-for="Comments" class="form-control" rows="4" placeholder="Enter performance comments, strengths, areas for improvement..."></textarea>
                <span asp-validation-for="Comments" class="text-danger small"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-warning me-2">
                    <i class="bi bi-check-circle me-1"></i>Update Performance Review
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
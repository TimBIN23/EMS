@model EM.Models.Performance

@{
    ViewData["Title"] = "Delete Performance Review";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-trash me-2 text-danger"></i>Delete Performance Review</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Warning!</h4>
    <p class="mb-0">You are about to permanently delete this performance review. This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0"><i class="bi bi-clipboard-x me-2"></i>Confirm Deletion</h5>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this performance review?</h5>

        <dl class="row mt-4">
            <dt class="col-sm-3">Review ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Employee:</dt>
            <dd class="col-sm-9">@Model.Employee?.FirstName @Model.Employee?.LastName</dd>

            <dt class="col-sm-3">Review Date:</dt>
            <dd class="col-sm-9">@Model.ReviewDate.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Score:</dt>
            <dd class="col-sm-9">
                @{
                    var rating = Model.Score switch
                    {
                        >= 4.5m => "Excellent",
                        >= 4.0m => "Very Good",
                        >= 3.5m => "Good",
                        >= 3.0m => "Satisfactory",
                        >= 2.0m => "Needs Improvement",
                        _ => "Poor"
                    };
                }
                <span class="badge bg-secondary">@Model.Score.ToString("0.0")/5.0</span> - @rating
            </dd>

            @if (!string.IsNullOrEmpty(Model.Comments))
            {
                <dt class="col-sm-3">Comments:</dt>
                <dd class="col-sm-9">
                    @if (Model.Comments.Length > 100)
                    {
                        @Model.Comments.Substring(0, 100)
                        <text>...</text>
                    }
                    else
                    {
                        @Model.Comments
                    }
                </dd>
            }
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash me-1"></i>Delete Performance Review
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle me-1"></i>Cancel
            </a>
        </form>
    </div>
</div>
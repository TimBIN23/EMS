@model EM.Models.Performance

@{
    ViewData["Title"] = "Create Performance Review";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-graph-up-arrow me-2"></i>Create Performance Review</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0"><i class="bi bi-clipboard-check me-2"></i>Performance Review Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EmployeeId" class="form-label fw-bold">Employee *</label>
                        <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId">
                            <option value="">Select Employee</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ReviewDate" class="form-label fw-bold">Review Date *</label>
                        <input asp-for="ReviewDate" class="form-control" type="date" />
                        <span asp-validation-for="ReviewDate" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Score" class="form-label fw-bold">Performance Score *</label>
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <input asp-for="Score" class="form-control" type="number" step="0.1" min="1" max="5" />
                        <span asp-validation-for="Score" class="text-danger small"></span>
                        <small class="form-text text-muted">Score must be between 1.0 and 5.0</small>
                    </div>
                    <div class="col-md-6">
                        <div class="rating-display mt-2">
                            <span id="ratingText" class="fw-bold">Satisfactory</span>
                            <div class="progress mt-1">
                                <div id="scoreProgress" class="progress-bar" role="progressbar" style="width: 60%"></div>
                            </div>
                            <small id="ratingDescription" class="text-muted">Meets expectations</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comments" class="form-label fw-bold">Comments & Feedback</label>
                <textarea asp-for="Comments" class="form-control" rows="4" placeholder="Enter performance comments, strengths, areas for improvement..."></textarea>
                <span asp-validation-for="Comments" class="text-danger small"></span>
                <small class="form-text text-muted">Provide constructive feedback and specific examples</small>
            </div>

            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Rating Scale:</strong>
                <br>
                <small>
                    <span class="text-danger">1.0-1.9 (Poor)</span> |
                    <span class="text-warning">2.0-2.9 (Needs Improvement)</span> |
                    <span class="text-warning">3.0-3.9 (Satisfactory)</span> |
                    <span class="text-success">4.0-4.4 (Good)</span> |
                    <span class="text-success">4.5-5.0 (Excellent)</span>
                </small>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle me-1"></i>Create Performance Review
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>

            <div class="mt-3">
                <small class="text-muted"><i class="bi bi-info-circle me-1"></i>Fields marked with * are required</small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const scoreInput = document.getElementById('Score');
            const ratingText = document.getElementById('ratingText');
            const scoreProgress = document.getElementById('scoreProgress');
            const ratingDescription = document.getElementById('ratingDescription');

            function updateRatingDisplay() {
                const score = parseFloat(scoreInput.value) || 3.0;
                const percentage = ((score - 1) / 4) * 100;

                scoreProgress.style.width = `${percentage}%`;

                if (score >= 4.5) {
                    ratingText.textContent = 'Excellent';
                    ratingText.className = 'fw-bold text-success';
                    scoreProgress.className = 'progress-bar bg-success';
                    ratingDescription.textContent = 'Exceeds expectations in all areas';
                } else if (score >= 4.0) {
                    ratingText.textContent = 'Very Good';
                    ratingText.className = 'fw-bold text-success';
                    scoreProgress.className = 'progress-bar bg-success';
                    ratingDescription.textContent = 'Consistently exceeds expectations';
                } else if (score >= 3.5) {
                    ratingText.textContent = 'Good';
                    ratingText.className = 'fw-bold text-warning';
                    scoreProgress.className = 'progress-bar bg-warning';
                    ratingDescription.textContent = 'Meets and sometimes exceeds expectations';
                } else if (score >= 3.0) {
                    ratingText.textContent = 'Satisfactory';
                    ratingText.className = 'fw-bold text-warning';
                    scoreProgress.className = 'progress-bar bg-warning';
                    ratingDescription.textContent = 'Meets expectations';
                } else if (score >= 2.0) {
                    ratingText.textContent = 'Needs Improvement';
                    ratingText.className = 'fw-bold text-danger';
                    scoreProgress.className = 'progress-bar bg-danger';
                    ratingDescription.textContent = 'Below expectations, needs development';
                } else {
                    ratingText.textContent = 'Poor';
                    ratingText.className = 'fw-bold text-danger';
                    scoreProgress.className = 'progress-bar bg-danger';
                    ratingDescription.textContent = 'Significantly below expectations';
                }
            }

            // Set today's date as default if not set
            const reviewDateInput = document.getElementById('ReviewDate');
            if (reviewDateInput && !reviewDateInput.value) {
                const today = new Date().toISOString().split('T')[0];
                reviewDateInput.value = today;
            }

            scoreInput.addEventListener('input', updateRatingDisplay);

            // Initialize rating display
            updateRatingDisplay();
        });
    </script>
}
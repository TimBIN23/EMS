<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EM.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: #ecf0f1;
                padding: 12px 20px;
                margin: 4px 10px;
                border-radius: 6px;
                transition: all 0.3s;
            }

                .sidebar .nav-link:hover {
                    background-color: #34495e;
                    color: white;
                }

                .sidebar .nav-link.active {
                    background-color: #3498db;
                    color: white;
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    width: 20px;
                    text-align: center;
                }
        /* Content */
        .content {
            flex: 1;
            padding: 20px;
            background-color: white;
            margin: 0;
        }
        /* Header */
        header {
            width: 100%;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
            background-color: white;
            box-shadow: rgba(0, 0, 0, 0.05) 0px 1px 2px 0px;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .sidebar-collapsed {
            width: 70px;
        }

            .sidebar-collapsed .nav-link span {
                display: none;
            }

            .sidebar-collapsed .nav-link i {
                margin-right: 0;
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="text-center mb-4">
            <h5 class="text-white">EMS</h5>
        </div>

        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
               asp-controller="Home" asp-action="Index">
                <i class="bi bi-house"></i> <span>Dashboard</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employees" ? "active" : "")"
               asp-controller="Employees" asp-action="Index">
                <i class="bi bi-people"></i> <span>Employees</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Attendances" ? "active" : "")"
               asp-controller="Attendances" asp-action="Index">
                <i class="bi bi-calendar-check"></i> <span>Attendance</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Leaves" ? "active" : "")"
               asp-controller="Leaves" asp-action="Index">
                <i class="bi bi-calendar-event"></i> <span>Leave Management</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Performances" ? "active" : "")"
               asp-controller="Performances" asp-action="Index">
                <i class="bi bi-graph-up"></i> <span>Performance</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Payrolls" ? "active" : "")"
               asp-controller="Payrolls" asp-action="Index">
                <i class="bi bi-cash-coin"></i> <span>Payroll</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Trainings" ? "active" : "")"
               asp-controller="Trainings" asp-action="Index">
                <i class="bi bi-mortarboard"></i> <span>Training</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Compliances" ? "active" : "")"
               asp-controller="Compliances" asp-action="Index">
                <i class="bi bi-shield-check"></i> <span>Compliance</span>
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")"
               asp-controller="Users" asp-action="Index">
                <i class="bi bi-person-circle"></i> <span>User</span>
            </a>

            <div class="mt-auto">
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")"
                   asp-controller="Settings" asp-action="Index">
                    <i class="bi bi-gear"></i> <span>Settings</span>
                </a>

                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-left"></i> <span>Logout</span>
                </a>
            </div>
        </nav>
    </div>

    <div class="d-flex flex-column flex-grow-1">
        <!-- Header -->
        <header>
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary me-3" type="button" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-3">Welcome, User!</span>
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-person"></i> My Account
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-left me-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Main content -->
        <main class="content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Toggle sidebar
        $('#sidebarToggle').click(function () {
            $('.sidebar').toggleClass('sidebar-collapsed');

            // Update button icon
            const icon = $(this).find('i');
            if ($('.sidebar').hasClass('sidebar-collapsed')) {
                icon.removeClass('bi-list').addClass('bi-layout-sidebar');
            } else {
                icon.removeClass('bi-layout-sidebar').addClass('bi-list');
            }
        });

        // Add active class based on current page
        $(document).ready(function () {
            const currentController = '@ViewContext.RouteData.Values["Controller"]';
            $('.nav-link').removeClass('active');
            $(`.nav-link[href*="${currentController.toLowerCase()}"]`).addClass('active');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@model EM.Models.Training

@{
    ViewData["Title"] = "Training Record Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-mortarboard me-2"></i>Training Record Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0"><i class="bi bi-book me-2"></i>Training Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Record ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">Employee:</dt>
                            <dd class="col-sm-8">
                                <strong>@Model.Employee?.FirstName @Model.Employee?.LastName</strong>
                                <br>
                                <small class="text-muted">@Model.Employee?.Department</small>
                            </dd>

                            <dt class="col-sm-4">Training Name:</dt>
                            <dd class="col-sm-8">
                                <strong>@Model.TrainingName</strong>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Start Date:</dt>
                            <dd class="col-sm-8">@Model.StartDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">End Date:</dt>
                            <dd class="col-sm-8">@Model.EndDate.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Duration:</dt>
                            <dd class="col-sm-8">
                                @{
                                    var duration = (Model.EndDate - Model.StartDate).TotalDays + 1;
                                    var durationDisplay = $"{duration} day{(duration != 1 ? "s" : "")}";
                                }
                                <span class="badge bg-secondary">@durationDisplay</span>
                            </dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @{
                                    var statusClass = Model.Status?.ToLower() switch
                                    {
                                        "completed" => "bg-success",
                                        "in-progress" => "bg-info",
                                        "scheduled" => "bg-warning",
                                        "cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                    var statusIcon = Model.Status?.ToLower() switch
                                    {
                                        "completed" => "bi-check-circle",
                                        "in-progress" => "bi-play-circle",
                                        "scheduled" => "bi-clock",
                                        "cancelled" => "bi-x-circle",
                                        _ => "bi-question-circle"
                                    };
                                }
                                <span class="badge @statusClass">
                                    <i class="bi @statusIcon me-1"></i>@Model.Status
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0"><i class="bi bi-calendar-range me-2"></i>Training Timeline</h5>
            </div>
            <div class="card-body text-center">
                @{
                    var isUpcoming = Model.StartDate > DateTime.Today;
                    var isOngoing = Model.StartDate <= DateTime.Today && Model.EndDate >= DateTime.Today;
                    var isCompleted = Model.EndDate < DateTime.Today;
                    var timelineIcon = isUpcoming ? "bi-calendar-plus text-warning" :
                    isOngoing ? "bi-play-circle text-info" :
                    "bi-check-circle text-success";
                    var timelineText = isUpcoming ? "Upcoming" :
                    isOngoing ? "Ongoing" :
                    "Completed";
                }
                <div class="mb-3">
                    <i class="bi @timelineIcon display-4"></i>
                </div>
                <h4>@timelineText</h4>
                <p class="text-muted">Training Status</p>
                <hr>
                <small class="text-muted">
                    @Model.StartDate.ToString("MMM dd") - @Model.EndDate.ToString("MMM dd, yyyy")
                </small>
                <br>
                <small class="text-muted">
                    @{
                        var totalDays = (Model.EndDate - Model.StartDate).TotalDays + 1;
                    }
                    @totalDays day@(totalDays != 1 ? "s" : "") total
                </small>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2 text-gray-800">Dashboard</h1>
                    <p class="mb-0 text-muted">Welcome to Employee Management System - Overview and quick access</p>
                </div>
                <div class="text-end">
                    <small class="text-muted">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Employees
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalEmployees">Loading...</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-people fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Present Today
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="presentToday">Loading...</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Leaves
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="pendingLeaves">Loading...</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-calendar-x fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                This Month Payroll
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="monthPayroll">Loading...</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-cash-coin fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-lightning-fill me-2"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a asp-controller="Employees" asp-action="Create" class="btn btn-primary btn-lg">
                                    <i class="bi bi-person-plus me-2"></i>Add Employee
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a asp-controller="Attendances" asp-action="Create" class="btn btn-success btn-lg">
                                    <i class="bi bi-clock-history me-2"></i>Mark Attendance
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a asp-controller="Leaves" asp-action="Create" class="btn btn-warning btn-lg">
                                    <i class="bi bi-calendar-plus me-2"></i>Request Leave
                                </a>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-grid">
                                <a asp-controller="Payrolls" asp-action="Create" class="btn btn-info btn-lg">
                                    <i class="bi bi-calculator me-2"></i>Process Payroll
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Modules Section -->
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card module-card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="module-icon bg-primary bg-gradient rounded-circle mx-auto mb-3">
                        <i class="bi bi-people-fill text-white fa-2x"></i>
                    </div>
                    <h5 class="card-title text-primary">Employee Management</h5>
                    <p class="card-text text-muted small">Manage employee records, profiles, and personal information</p>
                    <div class="mt-3">
                        <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-primary btn-sm me-2">
                            <i class="bi bi-list-ul me-1"></i>View All
                        </a>
                        <a asp-controller="Employees" asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>Add New
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card module-card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="module-icon bg-success bg-gradient rounded-circle mx-auto mb-3">
                        <i class="bi bi-calendar-check text-white fa-2x"></i>
                    </div>
                    <h5 class="card-title text-success">Attendance Tracking</h5>
                    <p class="card-text text-muted small">Track employee attendance, time-in, and time-out records</p>
                    <div class="mt-3">
                        <a asp-controller="Attendances" asp-action="Index" class="btn btn-outline-success btn-sm me-2">
                            <i class="bi bi-list-ul me-1"></i>View Records
                        </a>
                        <a asp-controller="Attendances" asp-action="Create" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>Mark Attendance
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card module-card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="module-icon bg-warning bg-gradient rounded-circle mx-auto mb-3">
                        <i class="bi bi-calendar-event text-white fa-2x"></i>
                    </div>
                    <h5 class="card-title text-warning">Leave Management</h5>
                    <p class="card-text text-muted small">Manage leave requests, approvals, and tracking</p>
                    <div class="mt-3">
                        <a asp-controller="Leaves" asp-action="Index" class="btn btn-outline-warning btn-sm me-2">
                            <i class="bi bi-list-ul me-1"></i>View Leaves
                        </a>
                        <a asp-controller="Leaves" asp-action="Create" class="btn btn-warning btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>New Request
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card module-card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="module-icon bg-info bg-gradient rounded-circle mx-auto mb-3">
                        <i class="bi bi-cash-coin text-white fa-2x"></i>
                    </div>
                    <h5 class="card-title text-info">Payroll System</h5>
                    <p class="card-text text-muted small">Process payroll, generate slips, and manage payments</p>
                    <div class="mt-3">
                        <a asp-controller="Payrolls" asp-action="Index" class="btn btn-outline-info btn-sm me-2">
                            <i class="bi bi-list-ul me-1"></i>View Payroll
                        </a>
                        <a asp-controller="Payrolls" asp-action="Create" class="btn btn-info btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>Process New
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="bi bi-activity me-2"></i>Recent Activity
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="bi bi-info-circle text-muted me-2"></i>
                        <span class="text-muted">Recent activity feed will be displayed here</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .module-icon {
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .module-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .module-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1) !important;
        }

    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }

    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }

    .border-left-warning {
        border-left: 4px solid #f6c23e !important;
    }

    .border-left-info {
        border-left: 4px solid #36b9cc !important;
    }

    .card {
        border: 1px solid #e3e6f0;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set placeholder statistics
            document.getElementById('totalEmployees').textContent = '24';
            document.getElementById('presentToday').textContent = '18';
            document.getElementById('pendingLeaves').textContent = '3';
            document.getElementById('monthPayroll').textContent = '$45,230';
        });
    </script>
}
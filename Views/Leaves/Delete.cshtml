@model EM.Models.Leave

@{
    ViewData["Title"] = "Delete Leave Request";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-trash me-2 text-danger"></i>Delete Leave Request</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Warning!</h4>
    <p class="mb-0">You are about to permanently delete this leave request. This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0"><i class="bi bi-calendar-x me-2"></i>Confirm Deletion</h5>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this leave request?</h5>

        <dl class="row mt-4">
            <dt class="col-sm-3">Request ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Employee:</dt>
            <dd class="col-sm-9">@Model.Employee?.FirstName @Model.Employee?.LastName</dd>

            <dt class="col-sm-3">Leave Type:</dt>
            <dd class="col-sm-9">@Model.LeaveType</dd>

            <dt class="col-sm-3">Dates:</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("MMM dd, yyyy") to @Model.EndDate.ToString("MMM dd, yyyy")</dd>

            <dt class="col-sm-3">Duration:</dt>
            <dd class="col-sm-9">
                @{
                    var duration = (Model.EndDate - Model.StartDate).TotalDays + 1;
                    var durationDisplay = $"{duration} day{(duration != 1 ? "s" : "")}";
                }
                @durationDisplay
            </dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash me-1"></i>Delete Request
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle me-1"></i>Cancel
            </a>
        </form>
    </div>
</div>
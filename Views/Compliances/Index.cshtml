@model IEnumerable<EM.Models.Compliance>

@{
    ViewData["Title"] = "Compliance Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shield-check me-2"></i>Compliance Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Add Compliance
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    @* <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0"><i class="bi bi-list-ul me-2"></i>Compliance Records</h5>
    </div> *@
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Employee</th>
                            <th>Policy</th>
                            <th>Acknowledged On</th>
                            <th>Status</th>
                            <th>Days Since</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var daysSince = (DateTime.Today - item.AcknowledgedOn).Days;
                            var daysSinceDisplay = daysSince == 0 ? "Today" : $"{daysSince} day{(daysSince != 1 ? "s" : "")} ago";
                            var daysSinceClass = daysSince <= 7 ? "bg-success" : daysSince <= 30 ? "bg-warning" : "bg-danger";

                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Employee?.FirstName @item.Employee?.LastName</strong>
                                    <br>
                                    <small class="text-muted">@item.Employee?.Department</small>
                                </td>
                                <td>
                                    <div class="fw-bold">@item.Policy</div>
                                    @if (item.Policy?.Length > 50)
                                    {
                                        <small class="text-muted">@item.Policy?.Substring(0, 50)...</small>
                                    }
                                </td>
                                <td>@item.AcknowledgedOn.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @{
                                        var statusClass = item.Status?.ToLower() switch
                                        {
                                            "completed" => "bg-success",
                                            "pending" => "bg-warning",
                                            "overdue" => "bg-danger",
                                            "in-progress" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>
                                    <span class="badge @daysSinceClass">@daysSinceDisplay</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-shield display-1 text-muted"></i>
                <h4 class="text-muted mt-3">No Compliance Records Found</h4>
                <p class="text-muted">Start tracking compliance by adding your first record.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Add First Record
                </a>
            </div>
        }
    </div>
    @if (Model.Any())
    {
        <div class="card-footer text-muted">
            @{
                var completedCount = Model.Count(c => c.Status?.ToLower() == "completed");
                var pendingCount = Model.Count(c => c.Status?.ToLower() == "pending");
                var overdueCount = Model.Count(c => c.Status?.ToLower() == "overdue");
                var recentCount = Model.Count(c => (DateTime.Today - c.AcknowledgedOn).Days <= 7);
            }
            <small>Total: @Model.Count() | Completed: @completedCount | Pending: @pendingCount | Overdue: @overdueCount | Recent: @recentCount</small>
        </div>
    }
</div>
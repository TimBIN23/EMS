@model EM.Models.Compliance

@{
    ViewData["Title"] = "Edit Compliance Record";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-pencil me-2"></i>Edit Compliance Record</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-warning text-dark">
        <h5 class="card-title mb-0"><i class="bi bi-file-earmark-check me-2"></i>Edit Compliance Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EmployeeId" class="form-label fw-bold">Employee *</label>
                        <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId">
                            <option value="">Select Employee</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AcknowledgedOn" class="form-label fw-bold">Acknowledged On *</label>
                        <input asp-for="AcknowledgedOn" class="form-control" type="date" />
                        <span asp-validation-for="AcknowledgedOn" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Policy" class="form-label fw-bold">Policy *</label>
                <select asp-for="Policy" class="form-select">
                    <option value="">Select Policy</option>
                    <option value="Code of Conduct">Code of Conduct</option>
                    <option value="Data Protection Policy">Data Protection Policy</option>
                    <option value="Health and Safety Policy">Health and Safety Policy</option>
                    <option value="Anti-Harassment Policy">Anti-Harassment Policy</option>
                    <option value="Information Security Policy">Information Security Policy</option>
                    <option value="Social Media Policy">Social Media Policy</option>
                    <option value="Remote Work Policy">Remote Work Policy</option>
                    <option value="Dress Code Policy">Dress Code Policy</option>
                    <option value="Confidentiality Agreement">Confidentiality Agreement</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Policy" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label fw-bold">Status *</label>
                <select asp-for="Status" class="form-select">
                    <option value="">Select Status</option>
                    <option value="Completed">Completed</option>
                    <option value="Pending">Pending</option>
                    <option value="Overdue">Overdue</option>
                    <option value="In-Progress">In Progress</option>
                </select>
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>

            <div class="alert alert-info mt-3">
                <i class="bi bi-clock-history me-2"></i>
                <strong>Last Updated:</strong> This record tracks policy compliance and acknowledgment status.
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-warning me-2">
                    <i class="bi bi-check-circle me-1"></i>Update Compliance Record
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
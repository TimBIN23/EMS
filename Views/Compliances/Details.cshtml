@model EM.Models.Compliance

@{
    ViewData["Title"] = "Compliance Record Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shield-check me-2"></i>Compliance Record Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0"><i class="bi bi-file-earmark-text me-2"></i>Compliance Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Record ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">Employee:</dt>
                            <dd class="col-sm-8">
                                <strong>@Model.Employee?.FirstName @Model.Employee?.LastName</strong>
                                <br>
                                <small class="text-muted">@Model.Employee?.Department</small>
                            </dd>

                            <dt class="col-sm-4">Policy:</dt>
                            <dd class="col-sm-8">
                                <strong>@Model.Policy</strong>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Acknowledged On:</dt>
                            <dd class="col-sm-8">@Model.AcknowledgedOn.ToString("MMMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @{
                                    var statusClass = Model.Status?.ToLower() switch
                                    {
                                        "completed" => "bg-success",
                                        "pending" => "bg-warning",
                                        "overdue" => "bg-danger",
                                        "in-progress" => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@Model.Status</span>
                            </dd>

                            <dt class="col-sm-4">Days Since:</dt>
                            <dd class="col-sm-8">
                                @{
                                    var daysSince = (DateTime.Today - Model.AcknowledgedOn).Days;
                                    var daysSinceDisplay = daysSince == 0 ? "Today" : $"{daysSince} day{(daysSince != 1 ? "s" : "")} ago";
                                    var daysSinceClass = daysSince <= 7 ? "bg-success" : daysSince <= 30 ? "bg-warning" : "bg-danger";
                                }
                                <span class="badge @daysSinceClass">@daysSinceDisplay</span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0"><i class="bi bi-graph-up me-2"></i>Compliance Status</h5>
            </div>
            <div class="card-body text-center">
                @{
                    var daysSinceOn = (DateTime.Today - Model.AcknowledgedOn).Days;
                    var statusIcon = Model.Status?.ToLower() switch
                    {
                        "completed" => "bi-check-circle-fill text-success",
                        "pending" => "bi-clock-fill text-warning",
                        "overdue" => "bi-exclamation-circle-fill text-danger",
                        "in-progress" => "bi-arrow-repeat text-info",
                        _ => "bi-question-circle text-secondary"
                    };
                }
                <div class="mb-3">
                    <i class="bi @statusIcon display-4"></i>
                </div>
                <h4>@Model.Status</h4>
                <p class="text-muted">Compliance Status</p>
                <hr>
                <small class="text-muted">
                    Acknowledged @daysSinceOn day@(daysSinceOn != 1 ? "s" : "") ago
                </small>
            </div>
        </div>
    </div>
</div>
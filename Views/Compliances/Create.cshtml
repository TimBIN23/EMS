@model EM.Models.Compliance

@{
    ViewData["Title"] = "Create Compliance Record";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shield-plus me-2"></i>Create Compliance Record</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0"><i class="bi bi-file-earmark-check me-2"></i>Compliance Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EmployeeId" class="form-label fw-bold">Employee *</label>
                        <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId">
                            <option value="">Select Employee</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AcknowledgedOn" class="form-label fw-bold">Acknowledged On *</label>
                        <input asp-for="AcknowledgedOn" class="form-control" type="date" />
                        <span asp-validation-for="AcknowledgedOn" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Policy" class="form-label fw-bold">Policy *</label>
                <select asp-for="Policy" class="form-select">
                    <option value="">Select Policy</option>
                    <option value="Code of Conduct">Code of Conduct</option>
                    <option value="Data Protection Policy">Data Protection Policy</option>
                    <option value="Health and Safety Policy">Health and Safety Policy</option>
                    <option value="Anti-Harassment Policy">Anti-Harassment Policy</option>
                    <option value="Information Security Policy">Information Security Policy</option>
                    <option value="Social Media Policy">Social Media Policy</option>
                    <option value="Remote Work Policy">Remote Work Policy</option>
                    <option value="Dress Code Policy">Dress Code Policy</option>
                    <option value="Confidentiality Agreement">Confidentiality Agreement</option>
                    <option value="Other">Other (specify in notes)</option>
                </select>
                <span asp-validation-for="Policy" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3" id="customPolicyGroup" style="display: none;">
                <label for="CustomPolicy" class="form-label fw-bold">Custom Policy Name</label>
                <input type="text" id="CustomPolicy" name="CustomPolicy" class="form-control" placeholder="Enter custom policy name" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label fw-bold">Status *</label>
                <select asp-for="Status" class="form-select">
                    <option value="">Select Status</option>
                    <option value="Completed">Completed</option>
                    <option value="Pending">Pending</option>
                    <option value="Overdue">Overdue</option>
                    <option value="In-Progress">In Progress</option>
                </select>
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>

            <div class="alert alert-info mt-3">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Compliance Tracking:</strong> This record tracks employee acknowledgment and compliance with company policies.
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle me-1"></i>Create Compliance Record
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
            </div>

            <div class="mt-3">
                <small class="text-muted"><i class="bi bi-info-circle me-1"></i>Fields marked with * are required</small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const policySelect = document.getElementById('Policy');
            const customPolicyGroup = document.getElementById('customPolicyGroup');
            const customPolicyInput = document.getElementById('CustomPolicy');

            // Set today's date as default if not set
            const acknowledgedOnInput = document.getElementById('AcknowledgedOn');
            if (acknowledgedOnInput && !acknowledgedOnInput.value) {
                const today = new Date().toISOString().split('T')[0];
                acknowledgedOnInput.value = today;
            }

            // Show/hide custom policy input
            policySelect.addEventListener('change', function() {
                if (this.value === 'Other') {
                    customPolicyGroup.style.display = 'block';
                } else {
                    customPolicyGroup.style.display = 'none';
                    customPolicyInput.value = '';
                }
            });

            // Update policy field when custom policy is entered
            customPolicyInput.addEventListener('input', function() {
                if (policySelect.value === 'Other') {
                    // This will be handled in the controller
                }
            });
        });
    </script>
}
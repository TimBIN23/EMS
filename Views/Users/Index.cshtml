@model IEnumerable<EM.Models.User>

@{
    ViewData["Title"] = "User Accounts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people-fill me-2"></i>User Account Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus me-1"></i>Create User
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    @* <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0"><i class="bi bi-list-ul me-2"></i>User Accounts</h5>
    </div> *@
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Username</strong>
                                </td>
                                <td>
                                    <strong>@item.Employee?.FirstName @item.Employee?.LastName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Employee?.Department</span>
                                </td>
                                <td>
                                    @{
                                        var roleClass = item.Role?.ToLower() switch
                                        {
                                            "admin" => "bg-danger",
                                            "manager" => "bg-warning",
                                            "hr" => "bg-info",
                                            _ => "bg-success"
                                        };
                                    }
                                    <span class="badge @roleClass">@item.Role</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-people display-1 text-muted"></i>
                <h4 class="text-muted mt-3">No User Accounts Found</h4>
                <p class="text-muted">Get started by creating your first user account.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus me-2"></i>Create First User
                </a>
            </div>
        }
    </div>
    @if (Model.Any())
    {
        <div class="card-footer text-muted">
            @{
                var adminCount = Model.Count(u => u.Role?.ToLower() == "admin");
                var managerCount = Model.Count(u => u.Role?.ToLower() == "manager");
                var userCount = Model.Count(u => u.Role?.ToLower() == "user");
            }
            <small>Total Users: @Model.Count() | Admins: @adminCount | Managers: @managerCount | Users: @userCount</small>
        </div>
    }
</div>
@model EM.Models.Payroll

@{
    ViewData["Title"] = "Delete Payroll Record";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-trash me-2 text-danger"></i>Delete Payroll Record</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="alert alert-danger">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>Warning!</h4>
    <p class="mb-0">You are about to permanently delete this payroll record. This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0"><i class="bi bi-cash-x me-2"></i>Confirm Deletion</h5>
    </div>
    <div class="card-body">
        <h5>Are you sure you want to delete this payroll record?</h5>

        <dl class="row mt-4">
            <dt class="col-sm-3">Record ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Employee:</dt>
            <dd class="col-sm-9">@Model.Employee?.FirstName @Model.Employee?.LastName</dd>

            <dt class="col-sm-3">Period:</dt>
            <dd class="col-sm-9">@(new DateTime(Model.Year, Model.Month, 1).ToString("MMMM yyyy"))</dd>

            <dt class="col-sm-3">Salary:</dt>
            <dd class="col-sm-9">$@Model.Salary.ToString("N2")</dd>

            <dt class="col-sm-3">Bonus:</dt>
            <dd class="col-sm-9">$@Model.Bonus.ToString("N2")</dd>

            <dt class="col-sm-3">Deductions:</dt>
            <dd class="col-sm-9">$@Model.Deductions.ToString("N2")</dd>

            <dt class="col-sm-3">Net Pay:</dt>
            <dd class="col-sm-9">$@Model.NetPay.ToString("N2")</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash me-1"></i>Delete Payroll Record
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle me-1"></i>Cancel
            </a>
        </form>
    </div>
</div>
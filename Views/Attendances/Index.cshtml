@model IEnumerable<EM.Models.Attendance>

@{
    ViewData["Title"] = "Attendance Records";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-calendar-check me-2"></i>Attendance Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Add Attendance
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    @* <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0"><i class="bi bi-list-ul me-2"></i>Attendance Records</h5>
    </div> *@
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Employee</th>
                            <th>Date</th>
                            <th>Check In</th>
                            <th>Check Out</th>
                            <th>Hours</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var hoursWorked = item.CheckOutTime.HasValue
                            ? (item.CheckOutTime.Value - item.CheckInTime).TotalHours
                            : 0;
                            var hoursDisplay = item.CheckOutTime.HasValue
                            ? $"{hoursWorked:F1}h"
                            : "-";

                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Employee?.FirstName @item.Employee?.LastName</strong>
                                    <br>
                                    <small class="text-muted">@item.Employee?.Department</small>
                                </td>
                                <td>@item.Date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge bg-success">@item.CheckInTime.ToString(@"hh\:mm")</span>
                                </td>
                                <td>
                                    @if (item.CheckOutTime.HasValue)
                                    {
                                        <span class="badge bg-danger">@item.CheckOutTime.Value.ToString(@"hh\:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Not Checked Out</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@hoursDisplay</span>
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status?.ToLower() switch
                                        {
                                            "present" => "bg-success",
                                            "absent" => "bg-danger",
                                            "late" => "bg-warning",
                                            "half-day" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-calendar-x display-1 text-muted"></i>
                <h4 class="text-muted mt-3">No Attendance Records Found</h4>
                <p class="text-muted">Start tracking attendance by adding your first record.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Add First Record
                </a>
            </div>
        }
    </div>
    @if (Model.Any())
    {
        <div class="card-footer text-muted">
            <small>
                Total Records: @Model.Count() |
                Present: @Model.Count(a => a.Status?.ToLower() == "present") |
                Absent: @Model.Count(a => a.Status?.ToLower() == "absent")
            </small>
        </div>
    }
</div>